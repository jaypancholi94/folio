---
import Background from "../background/index.astro";
import Cauldron from "./cauldron.astro";
---

<div
  class="relative h-full w-fit flex flex-col ${backgroundColor} w-full h-screen bg-black"
>
  <Background>
    <div
      class="h-full flex flex-col items-center justify-center w-1/2 m-auto text-center gap-6 -mt-8"
    >
      <Cauldron height="120" width="120" />
      <h1
        class="text-white font-sans text-lg md:text-2xl font-semibold animate-page-load opacity-0"
        style="animation-delay: 0.3s;"
      >
        Brewing some magic behind the scenes! This page is still under a
        powerful spell.
      </h1>
      <h2
        class="text-white
        font-sans
        text-lg
        md:text-xl
        font-semibold
        animate-page-load opacity-0"
        style="
        animation-delay:
        0.6s;"
      >
        Check back soon for some muggle-born brilliance!
      </h2>
    </div>
  </Background>
</div>
