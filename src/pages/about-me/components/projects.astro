---
import Card from "../../../components/card/index.astro";
import { PROJECTS } from "../../../utils/constants";
import Divider from "../../../components/divider/index.astro";
import Project from "../atoms/project.astro";
---

<Card className="p-6 flex flex-col gap-3">
  <h2 class="text-white font-sans text-lg md:text-2xl font-semibold">
    Projects
  </h2>
  {
    PROJECTS.map((project, index: number) => (
      <div>
        <Project
          name={project.name}
          preview={project.preview}
          github={project.github}
          highlights={project.highlights}
          techStack={project.techStack}
        />

        {index + 1 !== PROJECTS.length && <Divider className="mt-6 mb-3" />}
      </div>
    ))
  }
</Card>
